# EduPlatform Frontend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api

# AI Course Builder Configuration
# Choose your AI service provider: openai, anthropic, gemini, or local
VITE_AI_SERVICE_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_MODEL=gpt-4-turbo
VITE_OPENAI_MAX_TOKENS=2000

# Anthropic Configuration (if using Anthropic)
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
VITE_ANTHROPIC_MODEL=claude-3-sonnet-20240229
VITE_ANTHROPIC_MAX_TOKENS=2000

# Google Gemini Configuration (if using Gemini)
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_GEMINI_MODEL=gemini-pro
VITE_GEMINI_MAX_TOKENS=2000

# Local AI Configuration (if using local AI)
VITE_LOCAL_AI_ENDPOINT=http://localhost:11434
VITE_LOCAL_AI_MODEL=llama2

# AI Course Builder Settings
VITE_AI_GENERATION_TIMEOUT=30000
VITE_AI_RETRY_ATTEMPTS=3
VITE_AI_ENABLE_CONTENT_FILTERING=true
VITE_AI_ENABLE_ANALYTICS=true

# Feature Flags
VITE_ENABLE_AI_COURSE_BUILDER=true
VITE_ENABLE_AI_SUGGESTIONS=true
VITE_ENABLE_AI_CONTENT_ENHANCEMENT=true
VITE_ENABLE_AI_ASSESSMENT_GENERATION=true

# Development Settings
VITE_AI_DEBUG_MODE=false
VITE_AI_MOCK_RESPONSES=true
VITE_MOCK_AI=true
